<!DOCTYPE html>
<html lang="en"> 
<head>
  <meta charset="UTF-8">
  <title>Bulbliss</title>
  <link rel="stylesheet" href="styles.css">
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://kit.fontawesome.com/297392fead.js" crossorigin="anonymous"></script>
</head>
<body class="home-body">
  
  <%- include('partials/navbar') %> 

   <div class="search-content">
    <h2 class="home-title">Lamps</h2>
   </div>

  
  <label for="type">Type:</label>
  <select id="type" name="type">
    <option value="all">All</option>
    <option value="table">Table</option>
    <option value="standing">Standing</option>
    <option value="hanging">Hanging</option>
  </select>
  
  <label for="freeShipping">Free Shipping:</label>
  <input type="checkbox" id="freeShipping" name="freeShipping">
  
  <div class="max-min">
    <label for="minPrice">Min Price:</label>
    <input type="number" id="minPrice" name="minPrice" value="0">
    <label for="maxPrice">Max Price:</label>
    <input type="number" id="maxPrice" name="maxPrice" value="100">
  </div>
  
  
  
  
  
  <div id="productsList">
    <% products.forEach(product => { %>
      <img src="/images/<%= product.imgname %>" alt="">
    <% }) %>
  </div>
  
  
  
  
  
  <script src="/script.js"></script>
</body>
</html>
